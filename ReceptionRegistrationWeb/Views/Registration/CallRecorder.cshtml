@{
    Layout = null;
}

<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modern UI Tasarım</title>
    <!-- FontAwesome için -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css">
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>

    <link rel="stylesheet" href="~/css/registration.css">
</head>
<body>

    <!-- Sayfa Düzeni -->
    <div class="container">

        <!-- Sol Sidebar - Sekme/Buton Alanları -->
        <div class="left-sidebar">
            <img src="~/content/img/Kia_Logo_B.png" alt="Logo" width="200" height="100">
            <div class="tab-button">
                <button id="clrbtn"><i class="fas fa-home"></i>Çağrı Kayıt</button>
            </div>
            <div class="tab-button">
                <button id="shwbtn"><i class="fas fa-user"></i>Showroom Kayıt</button>
            </div>
            <div class="tab-button">
                <button id="eksbtn"><i class="fas fa-cog"></i>Ekstra</button>
            </div>
            <div class="tab-button">
                <button id="logoutbtn"><i class="fa-solid fa-right-from-bracket"></i>Çıkış</button>
            </div>
        </div>

        <!-- İçerik - Datatable -->
        <div class="content">
            <h1 style="text-align:center;">ÇAĞRI KAYIT TABLOSU</h1>
            <br>
            <table id="customersTable" class="display" style="width:100%">
                <button id="addCustomerBtn" class="btn-add"><i class="fas fa-plus"></i> Yeni Kayıt Oluştur</button>
                <thead>
                    <tr>
                        <th>Tam İsim</th>
                        <th>Konu</th>
                        <th>Araç Modeli</th>
                        <th>Motor Paketi</th>
                        <th>Aktarılan Kişi</th>
                        <th>Konum</th>
                        <th>Telefon Numarası</th>
                        <th>Tarih ve Saat</th>
                        <th>Notlar</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Modal -->
    <div id="customerModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2 id="modalTitle">Çağrı Kaydı Ekle</h2>
            <form id="customerForm">

                <input type="hidden" id="customerId">

                <div class="form-group">
                    <label for="fullName">Tam İsim:</label>
                    <input type="text" id="fullName" name="fullName" required>
                </div>

                <div class="form-group">
                    <label for="subject">Konu:</label>
                    <input type="text" id="subject" name="subject" required>
                </div>

                <div class="form-group">
                    <label for="vehicleOfInterestandModel">Araç Modeli:</label>
                    <input type="text" id="vehicleOfInterestandModel" name="vehicleOfInterestandModel" required>
                </div>

                <div class="form-group">
                    <label for="packageEngine">Motor Paketi:</label>
                    <input type="text" id="packageEngine" name="packageEngine" required>
                </div>

                <div class="form-group">
                    <label for="transferredPerson">Aktarılan Kişi:</label>
                    <input type="text" id="transferredPerson" name="transferredPerson" required>
                </div>

                <div class="form-group">
                    <label for="location">Konum:</label>
                    <input type="text" id="location" name="location" required>
                </div>

                <div class="form-group">
                    <label for="phoneNumber">Telefon Numarası:</label>
                    <input type="text" id="phoneNumber" name="phoneNumber" required>
                </div>

                <div class="form-group">
                    <label for="notes">Notlar:</label>
                    <textarea id="notes" name="notes" rows="5"></textarea>
                </div>

                <button type="submit" class="btn-submit">Kaydet</button>
            </form>
        </div>
    </div>

    <script src="~/js/callrecorder.js"></script>
</body>
</html>

<script>
    document.getElementById("clrbtn").onclick = function () {
        window.location.href = "/callRecorder";
    };
    document.getElementById("shwbtn").onclick = function () {
        window.location.href = "/showroom";
    };
    document.getElementById("eksbtn").onclick = function () {
        window.location.href = "/";
    };
    document.getElementById("logoutbtn").onclick = function () {
        window.location.href = "/Account/Login";
    };
</script>